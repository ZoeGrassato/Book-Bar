@model IEnumerable<MyLibraryV2.Models.Book>
@{
    ViewData["Title"] = "Books-";
}

<div style="margin-left:10px" class="table-bod">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Genre</td>
                </tr>
            }

        </tbody>
    </table>
</div>

<div>
    <div class="col-sm-4">
        <a class="btn btn-sm btn-primary" asp-controller="Book" asp-action="RentABook">Rent A Book</a>
    </div>
</div>



