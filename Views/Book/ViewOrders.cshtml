@model IEnumerable<MyLibraryV2.Models.UserBookOrder>
@{
    ViewData["Title"] = "All Orders-";
}
<div>
    <ul class="list-group" style="margin-top:75px">
        @foreach (var item in Model)
        {
            <div>
                <li class="list-group-item d-flex justify-content-between align-items-center" style="height:70px;">
                    <div>
                        @item.BookName
                        <span style="font-style:italic;margin-left:30px;opacity:0.5;">- <i class="fas fa-clock"></i>created on @item.DateCreated</span>
                    </div>
                    <span class="badge badge-primary badge-pill" style="margin-top:5px;"><i class="fab fa-hubspot"></i> @item.BookGenre  </span>
                </li>
            </div>

        }
    </ul>
</div>



