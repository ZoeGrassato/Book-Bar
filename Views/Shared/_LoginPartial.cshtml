@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right buttons">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="margin-top:10px" style="color:whitesmoke">Hello @User.Identity.Name!</a>*@
                @*@UserManager.GetUserName(User)*@
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="margin-right:60px;">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li style="margin-right:40px;"><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}